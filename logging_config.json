{
  "version": 1,
  "disable_existing_loggers": false,
  "handlers": {
    "error_file_handler": {
      "class": "logging.FileHandler",
      "level": "ERROR",
      "filename": "error.log",
      "formatter": "standard"
    },
    "info_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "filename": "info.log",
      "formatter": "standard",
      "maxBytes": 1048576,
      "backupCount": 3
    },
    "payment_file_handler": {
      "class": "logging.FileHandler",
      "level": "PAYMENT",
      "filename": "payment.log",
      "formatter": "payment"
    }
  },
  "formatters": {
    "standard": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "payment": {
      "format": "%(asctime)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "loggers": {
    "payment": {
      "level": "PAYMENT",
      "handlers": ["payment_file_handler"]
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["info_file_handler", "error_file_handler"]
  }
}
